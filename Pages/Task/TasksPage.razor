                <FieldLabel ColumnSize="ColumnSize.Is2"></FieldLabel>
                <FieldBody ColumnSize="ColumnSize.Is3">
                    <Select Multiple="true" TValue="string" SelectedValue="@this.successorTask">
                        @foreach (var item in task.SuccessorTasks)
