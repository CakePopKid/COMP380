@page "/tasks"
@using Blazorise.DataGrid
@using ProjectManagementSystem.Data.Tasks
@inject TaskService TaskService


@code {
    List<Tasks> tasks;
    Tasks task = new Tasks();
    List<string> predecessorTaskTempList = new List<string>();
    List<string> successorTaskTempList = new List<string>();
    List<string> issueTempList = new List<string>();
    List<string> summaryTasksTempList = new List<string>();
    List<string> groupTaskTempList = new List<string>();
    string predecessorTask;
    string successorTask;
    string issue;
    string groupTask;
    bool taskList;
    bool taskDetails;
    bool createTask;
    bool tabularView;
    bool ganttChart;
    bool success;

    protected override async Task OnInitializedAsync()
    {
        tasks = await TaskService.GetTasksAsync();
        taskList = true;
        taskDetails = false;
        createTask = false;
        tabularView = false;
        ganttChart = false;
    }

    private void OnEditClick(Guid taskId)
    {
        //set our view
        taskList = false;
        taskDetails = true;
        createTask = false;
        tabularView = false;
        ganttChart = false;
        success = false;

        //get the task details we want to show from our list of tasks
        this.task = this.tasks.Find(x => x.Id.Equals(taskId));

        OnExpectedEndDateChange(this.task.ExpectedEndDate);
        OnActualEndDateChange(this.task.ActualEndDate);

        task.PercentCompleted = task.PercentCompleted ?? "0%";

        foreach (var task in tasks)
        {
            var successorTaskName = this.task.SuccessorTasks.Find(x => x.Equals(task.Name));
            if (task.Name != successorTaskName && task.Name != this.task.Name)
            {
                successorTaskTempList.Add(task.Name);
            }
            var predecessorTaskName = this.task.PredecessorTasks.Find(x => x.Equals(task.Name));
            if (task.Name != predecessorTaskName && task.Name != this.task.Name)
            {
                predecessorTaskTempList.Add(task.Name);
            }
        }

        summaryTasksTempList.Add(string.Empty);
        foreach (var task in tasks)
        {
            if (task.TaskType == TaskType.Summary && task.Name != this.task.Name)
            {
                summaryTasksTempList.Add(task.Name);
            }
        }

        foreach (var task in tasks)
        {
            if (task.Name != this.task.Name)
            {
                groupTaskTempList.Add(task.Name);
            }
        }

        //Create our temporary issue list
        CreateIssueList();
    }

    private void OnCreateTaskClick()
    {
        // Take user to the create task page and provide empty values because we cannot pass null into the data fields
        taskList = false;
        taskDetails = false;
        createTask = true;
        tabularView = false;
        ganttChart = false;
        success = false;

        this.task = new Tasks();
        this.task.Id = Guid.NewGuid();
        this.task.Name = string.Empty;
        this.task.Description = string.Empty;
        this.task.ResourceAssigned = string.Empty;
        this.task.ExpectedDuration = string.Empty;
        this.task.ExpectedEffort = 0;
        this.task.ActualDuration = string.Empty;
        this.task.EffortCompleted = 0;
        this.task.ActualEffort = 0;
        this.task.PercentCompleted = "0%";
        this.task.PredecessorTasks = new List<string>();
        this.task.SuccessorTasks = new List<string>();
        this.task.ListOfIssues = new List<string>();
        this.task.TaskType = new TaskType();
        this.task.ParentSummaryTask = string.Empty;
        this.task.GroupOtherTasks = new List<string>();

        OnExpectedEndDateChange(this.task.ExpectedEndDate);
        OnActualEndDateChange(this.task.ActualEndDate);

        task.PercentCompleted = task.PercentCompleted ?? "0%";

        foreach (var task in tasks)
        {
            var successorTaskName = this.task.SuccessorTasks.Find(x => x.Equals(task.Name));
            if (task.Name != successorTaskName && task.Name != this.task.Name)
            {
                successorTaskTempList.Add(task.Name);
            }
            var predecessorTaskName = this.task.PredecessorTasks.Find(x => x.Equals(task.Name));
            if (task.Name != predecessorTaskName && task.Name != this.task.Name)
            {
                predecessorTaskTempList.Add(task.Name);
            }
        }

        summaryTasksTempList.Add(string.Empty);
        foreach (var task in tasks)
        {
            if (task.TaskType == TaskType.Summary && task.Name != this.task.Name)
            {
                summaryTasksTempList.Add(task.Name);
            }
        }

        foreach (var task in tasks)
        {
            if (task.Name != this.task.Name)
            {
                groupTaskTempList.Add(task.Name);
            }
        }

        //Create our temporary issue list
        CreateIssueList();
    }

    private void CreateIssueList()
    {
        issueTempList.Add("Issue 1");
        issueTempList.Add("Issue 2");
        issueTempList.Add("Issue 3");
        issueTempList.Add("Issue 4");
    }

    private void OnExpectedEndDateChange(DateTime? endDate)
    {
        // Update duration on expected end date change
        this.task.ExpectedEndDate = endDate;
        if (this.task.ExpectedStartDate != null)
        {
            var expectedTimeDifference = this.task.ExpectedEndDate.Value - this.task.ExpectedStartDate.Value;
            this.task.ExpectedDuration = ((int)expectedTimeDifference.TotalDays).ToString() + " day(s)";
        }
        else
        {
            this.task.ExpectedDuration = "0 days";
        }
    }

    private void OnActualEndDateChange(DateTime? endDate)
    {
        // Update duration on actual end date change
        this.task.ActualEndDate = endDate;
        if (this.task.ActualStartDate != null)
        {
            var actualTimeDifference = this.task.ActualEndDate.Value - this.task.ActualStartDate.Value;
            this.task.ActualDuration = ((int)actualTimeDifference.TotalDays).ToString() + " day(s)";
        }
        else
        {
            this.task.ActualDuration = "0 days";
        }
    }

    private void ClickBack()
    {
        // Take user back to task list page
        this.taskList = true;
        this.taskDetails = false;
        this.createTask = false;
        this.tabularView = false;
        this.ganttChart = false;

        //Clear all of the temp lists
        this.predecessorTaskTempList = new List<string>();
        this.successorTaskTempList = new List<string>();
        this.issueTempList = new List<string>();
        this.summaryTasksTempList = new List<string>();
        this.groupTaskTempList = new List<string>();
    }

    private void ClickSaveEdit()
    {
        // If the name is empty, we cannot save because it is required
        if (string.IsNullOrEmpty(this.task.Name))
        {
            return;
        }

        // Find the existing task and set it equal to the updated task so we override old data with new data
        this.tasks[this.tasks.FindIndex(x => x.Equals(this.task))] = this.task;
        this.success = true;
    }

    private void ClickSaveNew()
    {
        // If the name is empty, we cannot save because it is required
        if (string.IsNullOrEmpty(this.task.Name))
        {
            return;
        }

        //Add our new task to the list of tasks
        this.tasks.Add(this.task);
        this.success = true;
    }

    private void OnDeleteClick(Guid Id)
    {
        this.tasks.RemoveAll(x => x.Id == Id);
    }

    private void OnAddPredecessorTaskClick()
    {
        // Add to our predecessor task list and remove from our temp list so the user cannot add it twice
        if (this.predecessorTask == null)
        {
            return;
        }
        this.task.PredecessorTasks.Add(this.predecessorTask);
        this.predecessorTaskTempList.Remove(this.predecessorTask);
        this.predecessorTask = null;
    }

    private void OnAddSuccessorTaskClick()
    {
        // Add to our successor task list and remove from our temp list so the user cannot add it twice
        if (this.successorTask == null)
        {
            return;
        }
        this.task.SuccessorTasks.Add(this.successorTask);
        this.successorTaskTempList.Remove(this.successorTask);
        this.successorTask = null;
    }

    private void OnAddIssueClick()
    {
        // Add to our issue task list and remove from our temp list so the user cannot add it twice
        if (this.issue == null)
        {
            return;
        }
        this.task.ListOfIssues.Add(this.issue);
        this.issueTempList.Remove(this.issue);
        this.issue = null;
    }

    private void OnAddGroupTaskClick()
    {
        // Add to our group task list and remove from our temp list so the user cannot add it twice
        if (this.groupTask == null)
        {
            return;
        }
        this.task.GroupOtherTasks.Add(this.groupTask);
        this.groupTaskTempList.Remove(this.groupTask);
        this.groupTask = null;
    }

    private void ValidateNameExists(ValidatorEventArgs n)
    {
        var name = Convert.ToString(n.Value);

        n.Status = string.IsNullOrEmpty(name) ? ValidationStatus.None : ValidationStatus.Success;
    }

    private void OnTabularViewClick()
    {
        // Set our view
        this.taskList = false;
        this.taskDetails = false;
        this.createTask = false;
        this.tabularView = true;
        this.ganttChart = false;
        this.success = false;
    }

    private void OnGanttChartClick()
    {
        // Set our view
        this.taskList = false;
        this.taskDetails = false;
        this.createTask = false;
        this.tabularView = false;
        this.ganttChart = true;
        this.success = false;
    }
}


@if (this.tasks == null)
{
    <h1>Loading...</h1>
}
else if (this.tasks.Count == 0)
{
    <h1>There are no tasks</h1>
}
else if (taskList)
{
    <div class="container-fluid">
        <h1>Tasks List</h1>
        <div class="list-table">
            <DataGrid TItem="Tasks" Data="@tasks" Sortable="true" Filterable="true" ShowPager="true" PageSize="20" Striped="true" Borderless="true" Bordered="true" Editable="true">
                <DataGridColumn TItem="Tasks" Field="@nameof(Tasks.Name)" Caption="Name"></DataGridColumn>
                <DataGridColumn TItem="Tasks" Field="@nameof(Tasks.ResourceAssigned)" Caption="Assigned Resource"></DataGridColumn>
                <DataGridColumn TItem="Tasks" Field="@nameof(Tasks.ExpectedStartDate)" Caption="Expected Start Date"></DataGridColumn>
                <DataGridColumn TItem="Tasks" Field="@nameof(Tasks.ExpectedEndDate)" Caption="Expected End Date"></DataGridColumn>
                <DataGridColumn TItem="Tasks" Field="@nameof(Tasks.TaskType)" Caption="Type"></DataGridColumn>
                <DataGridCommandColumn TItem="Tasks">
                    <NewCommandTemplate Context="task"></NewCommandTemplate>
                    <EditCommandTemplate Context="task"><Button Color="Color.Primary" Clicked="@(e=> OnEditClick(task.Item.Id))">Edit</Button></EditCommandTemplate>
                    <DeleteCommandTemplate Context="task"><Button Color="Color.Danger" Clicked="@(e=> OnDeleteClick(task.Item.Id))">Delete</Button></DeleteCommandTemplate>
                </DataGridCommandColumn>
            </DataGrid>
        </div>
        <div style="padding-top:1em;">
            <Button Clicked="@OnCreateTaskClick" Color="Color.Info">Create Task</Button>
            <Button Clicked="@OnTabularViewClick" Color="Color.Dark" class="tabular-button">Tabular View</Button>
            <Button Clicked="@OnGanttChartClick" Color="Color.Secondary" class="gantt-button">Gantt Chart</Button>
        </div>
    </div>
}
